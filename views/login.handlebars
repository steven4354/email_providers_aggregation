<h1 style="margin-bottom: 30px">Welcome! Sign In To Access Email Aggregator</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <form method="post" action="/login">
        <div class="form-group" method="post" action="/login">
          <label for="username">Your Username</label>
          <input name="username" type="text" class="form-control" aria-describedby="usernameHelp" placeholder="Enter username" id="username">
        </div>
        <div class="form-group">
          <label for="password">Your Password</label>
          <input name="password" type="password" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
      </form>
    </div>
  </div>

  <div style="margin-top: 15px" class="row">
    <div class="col-sm-12">
      <a href="/register">
        <span class="btn btn-danger">
          New? Register for an account instead
        </span>
      </a>
    </div>
  </div>
</div>