<h1 style="margin-bottom: 30px">Sign In To Access App</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <form method="post" action="/login">
        <div class="form-group" method="post" action="/login">
          <label for="email">Email address</label>
          <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" id="email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" type="password" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
      </form>
    </div>
  </div>

  <div style="margin-top: 15px" class="row">
    <div class="col-sm-12">
      <a href="/register">
        <span class="btn btn-danger">
          New? Register for an account instead
        </span>
      </a>
    </div>
  </div>
</div>